<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.losaltoshacks.android.MapFragment"
    android:orientation="vertical">

            <info.hoang8f.android.segmented.SegmentedGroup
                xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                android:id="@+id/segmentMapControl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                segmentedgroup:sc_border_width="2dp"
                segmentedgroup:sc_corner_radius="5dp"
                android:layout_gravity="center_horizontal">

                <RadioButton
                    android:id="@+id/buttonFloor1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Floor 1"
                    android:checked="true"
                    style="@style/RadioButton" />

                <RadioButton
                    android:id="@+id/buttonFloor2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Floor 2"
                    style="@style/RadioButton" />
            </info.hoang8f.android.segmented.SegmentedGroup>

            <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
                android:id="@+id/map_floor1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
                android:id="@+id/map_floor2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

</LinearLayout>
